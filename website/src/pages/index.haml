-# index.html for biogems.info

-#= partial "requires_prerelease"
-#= content_navigation("What is Compass?", "Using Compass with StaticMatic", "Using Compass's CSS Frameworks")

#plugins
  #list
    %table
      %tr
        %th
          = "#"
        %th{ :align => "left" } biogem 
        %th{ :align => "left" } description
        %th{ :align => "left" } by
        %th{ :align => "left" } status
        %th{ :align => "left" } cite 
        %th{ :align => "left" } dl*)
        %th{ :align => "left" } version
        %th{ :align => "left" } dl90*)
      - by_popularity do |i, dl90, dl, name, status, version, descr, cite, author, home, docs, src|
        - rowclass = "odd"
        - if i.even?
          - rowclass = "even"
        %tr
          %td{ :align => "right", :class => "#{rowclass}" }
            .index
              = i
          %td{ :class => "#{rowclass}" }
            .name
              = link name.gsub(/[_-]/,' '), "http://rubygems.org/gems/#{name}"
          %td{ :class => "#{rowclass}" }
            .descr
              = descr
              - if docs and docs != ''
                = link " ... ", docs
          %td{ :class => "#{rowclass}" }
            .author
              = author
          %td{ :class => "#{rowclass}" }
            .status
              = status
          %td{ :class => "#{rowclass}" }
            .cite
              - if cite and cite != ''
                = link "doi", cite
          %td{ :align => "right", :class => "#{rowclass}" }
            .dl
              = link dl.to_s, "http://rubygems.org/gems/#{name}/stats"
          %td{ :align => "right", :class => "#{rowclass}" }
            .version
              = link version, src
          %td{ :align => "right", :class => "#{rowclass}" }
            .dl
              = dl90.to_s
  .footnote 
    <b>*)</b> gem downloads (dl total &amp; dl last 90 days) from 
    = link "rubygems.org", "http://rubygems.org"
    as of
    = Time.now.to_s.split[0]
